<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane maxWidth="355.0" minWidth="100.0" prefHeight="90.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ruhelp.ruhelp.RequestBlockController">
   <left>
      <HBox alignment="CENTER_LEFT" prefHeight="400.0" prefWidth="214.0" style="-fx-background-color: #FFAF1D;" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="img" fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets left="20.0" right="20.0" />
               </HBox.margin>
               <image>
                  <Image url="@imgs/perfil1.png" />
               </image>
            </ImageView>
            <Label fx:id="name">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </left>
   <bottom>
      <Pane prefHeight="5.0" prefWidth="261.0" visible="false" BorderPane.alignment="CENTER" />
   </bottom>
   <top>
      <Pane prefHeight="5.0" prefWidth="200.0" visible="false" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <Pane style="-fx-background-color: #FFAF1D;" BorderPane.alignment="CENTER" />
   </center>
   <right>
      <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: #FFAF1D;" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onMouseClicked="#accept" style="-fx-background-color: #FFAF1D;">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
               <graphic>
                  <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@imgs/accept.png" />
                     </image>
                  </ImageView>
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button mnemonicParsing="false" onMouseClicked="#ignore" style="-fx-background-color: #FFAF1D;">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
               <graphic>
                  <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@imgs/ignore.png" />
                     </image>
                  </ImageView>
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </HBox>
   </right>
</BorderPane>
